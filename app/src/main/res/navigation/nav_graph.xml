<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="fragment_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.noooobas.simpledbapp.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_MainFragment_to_addEmployee"
            app:destination="@id/addEmployeeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.noooobas.simpledbapp.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_searchResultsFragment"
            app:destination="@id/searchResultsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchResultsFragment"
        android:name="com.noooobas.simpledbapp.SearchResultsFragment"
        android:label="fragment_search_results_list"
        tools:layout="@layout/fragment_search_results_list" />
    <fragment
        android:id="@+id/addEmployeeFragment"
        android:name="com.noooobas.simpledbapp.AddEmployeeFragment"
        android:label="fragment_add_employee"
        tools:layout="@layout/fragment_add_employee" >
        <action
            android:id="@+id/action_addEmployee_to_datePickerFragment"
            app:destination="@id/datePickerFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <dialog
        android:id="@+id/datePickerFragment"
        android:name="com.noooobas.simpledbapp.DatePickerFragment"
        android:label="DatePickerFragment" >
        <action
            android:id="@+id/action_datePickerFragment_to_addEmployee"
            app:destination="@id/addEmployeeFragment"
            app:popUpToInclusive="false" />
    </dialog>
</navigation>
